{
    "name": "Billy Braga's web improvements",
    "version": "1.0",
    "description": "Make the web better for me",
    "manifest_version": 3,
    "host_permissions": [
        "https://music.youtube.com/*",
        "https://clients.nethris.com/*",
        "https://www.google.com/*"
    ],
    "permissions": [
        "scripting",
        "tabs",
        "notifications"
    ],
    "externally_connectable": {
        "matches": [
            "https://music.youtube.com/*"
        ]
    },
    "web_accessible_resources": [
        {
            "resources": [
                "js/music.youtube.com.js",
                "js/clients.nethris.com.js",
                "css/clients.nethris.com.css",
                "css/www.google.com.css",
                "img/favicon_144.png"
            ],
            "matches": [
                "https://music.youtube.com/*",
                "https://clients.nethris.com/*",
                "https://www.google.com/*"
            ]
        }
    ],
    "commands": {
        "volume_change-down": {
            "suggested_key": {
                "default": "Alt+Shift+Left",
                "mac": "Alt+Shift+Left"
            },
            "description": "Youtube Music volume down"
        },
        "volume_change-up": {
            "suggested_key": {
                "default": "Alt+Shift+Right",
                "mac": "Alt+Shift+Right"
            },
            "description": "Youtube Music volume up"
        },
        "play_pause": {
            "suggested_key": {
                "default": "MediaPlayPause",
                "mac": "MediaPlayPause"
            },
            "description": "Youtube play/pause"
        },
        "track-prev": {
            "suggested_key": {
                "default": "MediaPrevTrack",
                "mac": "MediaPrevTrack"
            },
            "description": "Youtube previous track"
        },
        "track-next": {
            "suggested_key": {
                "default": "MediaNextTrack",
                "mac": "MediaNextTrack"
            },
            "description": "Youtube next track"
        }
    },
    "background": {
        "service_worker": "js/background.js"
    }
}
